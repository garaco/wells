<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="{{ resource('bootstrap/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ resource('css/custom-siderbar.css') }}">
    <link rel="stylesheet" href="{{ resource('css/style.css') }}">
    <link rel="stylesheet" href="{{ resource('font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ resource('datatables/datatables.min.css') }}" >
    <link rel="stylesheet" href="{{ resource('datatables/DataTables-1.10.20/css/dataTables.bootstrap4.min.css') }}" >
    <link rel="icon" type="image/png" href="{{ resource('img/logo.png') }}">

  <title>{% block title %} {% endblock %} | Wells</title>
</head>
<body>
    {% include 'template/navbar.twig' %}

    <div class="row" id="wrapper">
        {% include 'template/siderbar.twig' %}
        <div class="contentPage">
          <div class="container-fluid border">
            <div class="row justify-content-md-center">
              <div class="col-sm-12 alert-color">
                  <h3 class="text-center">{{ block('title') }}</h3>
              </div>
            </div>
              <div class="side-body"><br>
                  {% block body %} {% endblock %}
              </div>
          </div>
        </div>
    </div>

    <div class="modal fade" id="operationModal" tabindex="-1" role="dialog" aria-labelledby="operationModalLabel" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header ga">
                    <h4 class="modal-title text-light"> <!-- Titulo --> </h4>
                    <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <!-- Contenido -->
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="data-model" value="{{ modelo }}">

    <script type="text/javascript" src="{{ resource('jquery/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ resource('bootstrap/js/bootstrap.js') }}"></script>
    <script type="text/javascript" src="{{ resource('js/shop.js') }}"></script>
    <script type="text/javascript" src="{{ resource('js/script.js') }}"></script>
    <script type="text/javascript" src="{{ resource('js/sweetalert2.js') }}"></script>
    <script type="text/javascript" src="{{ resource('datatables/datatables.min.js') }}"></script>
</body>
</html>
